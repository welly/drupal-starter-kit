{% set pages = tcg_header.menu %}

{% if tcg_header.header_members_area %}
  {% set members = {
    url: path('entity.node.canonical', {'node': tcg_header.header_members_area}),
    text: 'Members'
  } %}
{% endif %}

{% set nav_cta = {
  url: 'https://support.theclimategroup.org/give/280085/#!/donation/checkout',
  text: 'Support us'
} %}

{% set language = node.getTranslationLanguages()|length > 1 ? drupal_entity('block', 'dropdownlanguage', check_access=false)|render %}

{% if tcg_header.header_search %}
  {% set search = {
    url: tcg_header.header_search,
    text: 'Search'
  } %}
{% endif %}

{% set navLogo = {
  desk: '/assets/images/svg/cg_logo-white.svg',
  mob: '/assets/images/svg/cg_logo-avatar-white.svg',
} %}

{% include '@sections/header/_header.html.twig' with {
  pages: pages,
  members: members,
  nav_cta: nav_cta,
  navLogo: navLogo,
  color: tcg_default_color,
  search: search
} %}
