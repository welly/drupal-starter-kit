{
    "name": "drupal/recommended-project",
    "description": "Manifesto Drupal Starter Kit",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://starterkit.manifesto.co.uk/",
    "support": {
        "dev": "https://starterkit.manifesto.co.uk/",
        "stage": "https://starterkit.manifesto.co.uk/"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.6",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-project-message": "^9",
        "drupal/core-recommended": "^9",
        "oomphinc/composer-installers-extender": "^2.0"
    },
    "require-dev": {
        "drupal/core-dev": "^9.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "docroot/"
            },
            "file-mapping": {
                "[web-root]/sites/development.services.yml": {
                    "mode": "replace",
                    "path": "docroot/core/assets/scaffold/files/development.services.yml",
                    "overwrite": false
                }
            }
        },
        "installer-types": [
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-install-cmd-message": [
                "<bg=yellow;fg=black>                                                    </>",
                "<bg=yellow;fg=black>  Welcome to Manifesto Drupal Starter Kit codebase  </>",
                "<bg=yellow;fg=black>                                                    </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Spin the site(s) up with <bg=yellow;fg=black>make up</>",
                "  * Seed the database with <bg=yellow;fg=black>make seed-db</> or <bg=yellow;fg=black>make seed-db-re100</> or <bg=yellow;fg=black>make seed-db-climate_week</>",
                "  * Build the Drupal frontend with <bg=yellow;fg=black>make front-end</>",
                "  * Login to the site with <bg=yellow;fg=black>make uli</> or <bg=yellow;fg=black>make uli-re100</> or <bg=yellow;fg=black>make uli-climate_week</>"
            ]
        },
        "composer-exit-on-patch-failure": true,
        "patches": {}
    },
    "scripts": {}
}
